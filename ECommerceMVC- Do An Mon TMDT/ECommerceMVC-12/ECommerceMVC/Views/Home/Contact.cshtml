@model ECommerceMVC.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
    Layout = "_LayoutCustomer";
}

<div class="container-fluid py-5">
    <div class="container">
        <!-- Phần thông báo thành công -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <!-- Google Maps Embed -->
        <div class="mb-5 rounded overflow-hidden shadow">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.6505251921317!2d106.67960847415827!3d10.761393989386473!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1b91dddf0b%3A0x1ab004c91f448812!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBTxrAgcGjhuqFtIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaA!5e0!3m2!1svi!2s!4v1752558818389!5m2!1svi!2s" 
                    width="100%" 
                    height="450" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <!-- Form liên hệ -->
        <div class="row">
            <div class="col-md-6">
                <form asp-action="SubmitContact" method="post" class="bg-light p-4 rounded">
                    <h3 class="mb-4 text-primary">Gửi thông tin liên hệ</h3>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Họ tên</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label">Nội dung</label>
                        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Gửi liên hệ</button>
                </form>
            </div>
            
            <div class="col-md-6">
                <div class="bg-light p-4 rounded h-100">
                    <h3 class="mb-4 text-primary">Thông tin liên hệ</h3>
                    <div class="d-flex align-items-start mb-4">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-3 mt-1"></i>
                        <div>
                            <h5>Địa chỉ</h5>
                            <p class="mb-0">Trường Đại học Sư Phạm Thành Phố Hồ Chí Minh</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-4">
                        <i class="fas fa-phone-alt fa-2x text-primary me-3 mt-1"></i>
                        <div>
                            <h5>Điện thoại</h5>
                            <p class="mb-0">(+84) 123 456 789</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <i class="fas fa-envelope fa-2x text-primary me-3 mt-1"></i>
                        <div>
                            <h5>Email</h5>
                            <p class="mb-0">contact@uit.edu.vn</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .map-container {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}